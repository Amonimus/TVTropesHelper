{
    "name": "TVTropes Helper",
    "description": "Message notifier for TVTropes",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage", "scripting", "alarms", "input"],
    "host_permissions": ["https://tvtropes.org/"],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html",
        "default_title": "TVTropes Helper",
        "default_icon": {
            "16": "/icons/default/icon16.png",
            "32": "/icons/default/icon32.png",
            "48": "/icons/default/icon48.png",
            "128": "/icons/default/icon128.png"
        }
    },
    "icons": {
        "16": "/icons/default/icon16.png",
        "32": "/icons/default/icon32.png",
        "48": "/icons/default/icon48.png",
        "128": "/icons/default/icon128.png"
    }
}