{
    "name": "TVTropes Helper",
    "description": "Assist tool for TVTropes",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage", "activeTab", "scripting", "tabs", "management", "background", "alarms"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "content_scripts": [ 
        { 
            "js": ["jquery-3.6.0.js", "background.js"], 
            "matches": [ "http://*/*", "https://*/*"] 
        }
    ],
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon16.png",
            "32": "/images/icon32.png",
            "48": "/images/icon48.png",
            "128": "/images/icon128.png"
        }
    },
    "icons": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    }
}